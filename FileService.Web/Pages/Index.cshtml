@page
@model IndexModel
@{
    ViewData["Title"] = "Home page";
}

@section Scripts
    {
    <script src="@Url.Content("~/Scripts/App/FileUploader.js")"></script>
    <script src="@Url.Content("~/Scripts/App/FileManagement.js")"></script>
}

<div class="text-center">
    <div class="row">
        <div class="col-12">
            <h1 class="display-4">File Upload Service</h1>
        </div>
    </div>
    <div class="row">
        <div class="col-12">
            <h3>You may upload a single file or multiple files at once.</h3>
        </div>
    </div>
    <div class="row" id="uploadSuccess" style="display:none;">
        <div class="col-12">
            <div class="alert-success p-2"><h4>Your files were uploaded successfully.</h4></div>
        </div>
    </div>
    <form id="frmFileUpload" enctype="multipart/form-data">
        
        <div class="row mt-3">
            <div class="col-6">
                <input type="file" id="files" name="files" multiple accept=".csv,.json,.xml,.txt"><br><br>
            </div>
            <div class="col-6">
                <input id="btnUploadFiles" type="button" value="Upload File(s)" />
            </div>
        </div>
    </form>

    <form id="frmFileManagement">
        <div class="row mt-5 mb-3">
            <div class="col-12">
                <h2 class="display-4">File Management</h2>
            </div>
        </div>
        <div class="row" id="deleteSuccess" style="display:none;">
            <div class="col-12">
                <div class="alert-success p-2"><h4>Your file was deleted.</h4></div>
            </div>
        </div>
        <div class="row">
            <div class="col-12">
                <table id="tblFileManagement" style="width:100%;">
                    <thead>
                        <tr>
                            <th>File Name</th>
                            <th>File Size</th>
                            <th>Created On</th>
                            <th>Delete</th>
                        </tr>
                    </thead>
                    <tbody>
                    </tbody>
                </table>
            </div>
        </div>

    </form>
</div>
